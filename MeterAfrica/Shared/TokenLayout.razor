@inherits LayoutComponentBase

  
        <!-- header -->
        <header class="fixed-top">
            <div>
                <nav class="navbar navbar-expand-lg navbar-light bg-white">
                    <a class="navbar-brand" href="index.html">
                        <img src="../assets/images/logo.png" alt="logo">
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav m-auto">
                            <form class="form-inline my-2 my-lg-0">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1"><i class='fa fa-search'></i></span>
                                    </div>
                                    <input type="text" class="form-control" placeholder="search for merchant, bill or service" aria-label="Username" aria-describedby="basic-addon1">
                                </div>
                            </form>
                        </ul>
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="#">Merchants</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Agents</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Company</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Blog</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">ContactUs</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>

        </header>
        <!-- ./ header -->
        <!-- main -->
        <main style="width:99%">
            <div class="row payments">
                <div class="col-md-6">
                    <section class="payments">

                        @*<h4 class="mb-1 ml-0">@ViewBag.Header</h4>*@

                        @Body



                    </section>
                </div>
                <div class="col-md-6">
                    <section class="intro">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-7">
                                    <div>
                                        <h2>
                                            <text style="font-size:70%; color:red">
                                                Lets Give You Power,
                                                <br />
                                                With Energy to Power Your Home.
                                            </text>

                                        </h2>
                                        <p style="color:black">
                                            In modern life, power is like money; Enjoyable to have.
                                            But getting electrical power still feels like banking on the front desk.<br/>
                                            Sit back! relax! Lets give you power. <br /><br />
                                            Join us as we bring Power to every Consumer 
                                        </p>
                                        <div>
                                            <h4>Our Clients</h4>
                                        </div>
                                    </div>
                                    <div>
                                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                            <div class="carousel-inner">
                                                <div class="carousel-item active">
                                                    <img class="d-block w-100" src="../assets/images/Group.png" alt="First slide">
                                                </div>
                                                <div class="carousel-item">
                                                    <img class="d-block w-100" src="../assets/images/Group.png" alt="Second slide">
                                                </div>
                                                <div class="carousel-item">
                                                    <img class="d-block w-100" src="../assets/images/Group.png" alt="Third slide">
                                                </div>
                                            </div>
                                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                <span class="sr-only">Previous</span>
                                            </a>
                                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                <span class="sr-only">Next</span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-5">
                                    <img src="../assets/images/Image_11.png" class="w-100" alt="">
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>


        </main>
        <!-- ./ main -->
        <!-- footer -->
        <footer class='footer text-center fixed-bottom text-white' style="width:100%">
            <div class="container">
                <p class='mb-0'>
                    <i class="fa fa-copyright"></i> MeterAfrica, www.meter.africa

                </p>
                <p>
                    MeterAfrica is a product trademark of Meter Energy Nigeria Ltd.
                </p>
            </div>

        </footer>
        <!-- ./ footer -->
        <!-- jQuery -->
       
